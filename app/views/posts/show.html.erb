<!-- Page Content -->
<div class="container post-container">

    <!-- Portfolio Item Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
              <small><%= @post.Title %></small>
            </h1>
        </div>
    </div>
    <!-- /.row -->

    <!-- Portfolio Item Row -->
    <div class="row">
        <div class="col-md-4">
            <%#= image_tag @post.image, class: 'img-responsive' %>
        </div>

        <div class="col-md-8">
          <%= @post.text %>
        </div>

    </div>
    <!-- /.row -->

    <!-- Related Projects Row -->
    <div class="row">

        <div class="col-lg-12">
            <h3 class="page-header">Other Posts</h3>
        </div>

        <% @posts.each do |post| %>
            <div class="col-sm-3 col-xs-6">
                <%= link_to post_path(post) do %>
                  <%#= image_tag post.image, class: 'img-responsive portfolio-item' %>
                  <%= post.Title%>
                <% end %>
            </div>
        <% end %>

    </div>
    <!-- /.row -->
</div>